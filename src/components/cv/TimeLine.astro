---
const { title, subtitle, logo } = Astro.props;
---

<div class="grid grid-cols-[auto_1fr] gap-x-4 pb-4">
  <div class="flex flex-col items-center">
    <div class="h-12 w-12 flex items-center justify-center mb-2">
      {
        logo ? (
          <img
            src={logo}
            alt="Logo"
            class="max-h-full max-w-full object-contain"
          />
        ) : (
          <span class="w-4 h-4 bg-primary block rounded-full" />
        )
      }
    </div>
    <div class="flex-grow w-[2px] bg-primary"></div>
  </div>

  <div>
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>
